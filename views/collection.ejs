<%- include("template/header") %>
</head>
<body>

  <div class="d-flex justify-content-center">
    <h1>Flashcard Collection</h1>
  </div>

  <div class="d-flex justify-content-center">
    <h6>Here are your previously generated flashcards</h6>
  </div>

  <div class="container">

  <div class="input-group justify-content-center">
    <form action='/searchCollection' method='post'>
      <input name="search" type="search" placeholder="Search" />
      <button type="submit" class="btn btn-primary" data-mdb-ripple-init>
      <img src='images/search.svg'>
      </button>
    </form>
  </div>

<div class="list-group" style="margin-top:20px">
  <% for(var i = 0; i<collections.length; i++) { %>
      <a href="/review/<%= collections[i].shareId %>" class="list-group-item list-group-item-action"><%= collections[i].setName %></a>
  <% }; %>
</div>

</div>

<%- include("template/footer") %>