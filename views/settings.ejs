<%- include('template/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Settings</title>
    <meta name="StudyGen" content="Settings">
    <link rel="stylesheet" href="/css/settings.css">
  </head>
  <body>
    <%- include('template/headerBar') %>

    <div class="d-flex justify-content-center fw-bold mt-5 headerText space">
      <h1 style="font-size:38px">User Settings</h1>
    </div>

    <div class="px-4 text-center">
      <a data-toggle="modal" data-target="#profileModal">
        <img class="d-block mx-auto mb-4 settingsIcon rounded-circle" src="/images/<%= imageId %>.png"  alt="" width="300">
      </a>
      <div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header justify-content-center">
              <h5 class="modal-title" id="profileModalTitle">Choose your Profile Picture</h5>
            </div>
            <div class="modal-body">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-md-4">
                    <img id="image1" onclick = "highlightIcon(this)" class= "settingsIcon rounded-circle img-fluid profilePicBorder" src="/images/1.png"  alt="" width="100">
                    <img id="image2" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/2.png"  alt="" width="100">
                    <img id="image3" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                  </div>
                  <div class="col-md-4">
                    <img id="image4" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                    <img id="image5" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                    <img id="image6" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                  </div>
                  <div class="col-md-4">
                    <img id="image7" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                    <img id="image8" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                    <img id="image9" onclick="highlightIcon(this)" class="settingsIcon rounded-circle img-fluid" src="/images/1.png"  alt="" width="100">
                  </div>
                </div>

              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mx-auto">
        <div class="d-flex gap-3 justify-content-sm-center align-items-center flex-column">
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#changePwdModal">
            Change Password
          </button>
          <br>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editNameModal">
            Edit Display Name
          </button>
          <br>
          <br>
          <button id="logout-btn" class="btn btn-primary btn-lg px-4" type="button" onclick="confirm('Are you sure you want to log out?') ? location.href = '/logout' : event.preventDefault()">Log Out</button>
        </div>
      </div>
    </div>

    <div class="modal fade" id="changePwdModal" tabindex="-1" role="dialog" aria-labelledby="changePwdModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="changePwdModalLabel">Edit Display Name</h5>
              <button id="closeChangePwd" type="button" class="close" data-dismiss="modal" aria-label="Close" hidden="true"></button>
            </div>
            <div class="modal-body">
              <form>
                <input type="text" class="form-control" id="previousPwd" placeholder="Previous Password">
                <input type="text" class="form-control" id="newPwd" placeholder="New Password">
                <input type="text" class="form-control" id="ConfirmPwd" placeholder="Confirm Password">
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" onclick="changePwd(
                    document.getElementById('previousPwd').value,
                    document.getElementById('newPwd').value,
                    document.getElementById('ConfirmPwd').value
                )">Submit
              </button>
            </div>
          </div>
        </div>
      </div>

    <div class="modal fade" id="editNameModal" tabindex="-1" role="dialog" aria-labelledby="editNameModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editNameModalLabel">Edit Display Name</h5>
            <button id="closeEditName" type="button" class="close" data-dismiss="modal" aria-label="Close" hidden="true"></button>
          </div>
          <div class="modal-body">
            <form>
              <input type="text" class="form-control" id="newName" placeholder="New display name">
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="editName(document.getElementById('newName').value)">Submit</button>
          </div>
        </div>
      </div>
    </div>
    <script src="scripts/settings.js"></script>
    <%- include('template/footerBar') %>
  </body>
</html>
