<%- include("template/header.ejs") %>
<%- include("template/headerBar.ejs") %>
<div class="mt-3 ms-4">
    <form action='/register' method='post'>
        <div class="form-group m-2">
            <label for="loginId">loginId</label>
            <input type="text" class="form-control" id="loginId" name="loginId" placeholder="Enter Login ID">
            <small id="loginIdHelp" class="form-text text-muted">Alphabet or Number max 20 characters</small>
        </div>
        <div class="form-group m-2">
            <label for="name">name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
            <small id="nameHelp" class="form-text text-muted">Alphabet or Number max 20 characters</small>
        </div>
        <div class="form-group m-2">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">example: name@gmail.com</small>
        </div>
        <div class="form-group m-2">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
            <small id="passworldHelp" class="form-text text-muted">Alphabet or Number 3 to 20 characters</small>
        </div>
        <div class="form-group m-2">
            <label for="confirmPassword">confirmPassword</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Enter confirmPassword">
            <small id="confirmPasswordHelp" class="form-text text-muted">must match password</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<%- include("template/footerBar.ejs") %>
<%- include("template/footer.ejs") %>
